# vim: set ft=zsh expandtab:

# Display directory notes
# When passed a filename as an argument, link that file to the name .notes, then display the same
notes() {
    if [[ $# != 0 && -f $1 ]]; then
        ln -fs $1 .notes
    fi

    [[ -r .notes && -z "$SHUSH" ]] && { fmt -${COLUMNS:-80} -s .notes; echo; }
}
